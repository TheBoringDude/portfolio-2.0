{% extends "_includes/default.njk" %}

{% block title %}My Works{% endblock %}

{% block content %}
    <!-- portfolio contents -->
    <div class="portfolio-bg text-white w-full h-full mx-auto py-12">
        <nav class="w-5/6 mx-auto flex items-center justify-around mb-4">
            <h3 class="text-xl font-bold">Joshue Abance</h3>
            <ul class="flex">
                <li class="mr-8"><a href="#" class="text-lg font-light tracking-wide">About Me</a></li>
                <li><a href="#" class="text-lg font-light tracking-wide">Blog</a></li>
            </ul>
        </nav>
        <div class="text-center">
            <h1 class="text-3xl font-black tracking-wide">My Works</h1>
            <p class="text-xl font-light">Here are some of the projects and outputs I made :)</p>
        </div>
        <!-- projects showcase -->
        <div class="py-4 w-5/6 mx-auto">
            <div class="py-4">
                <h2 class="text-center text-xl font-black tracking-wide uppercase underline">Web Apps</h2>
                <div class="grid grid-cols-2 gap-4 my-4">
                    <div class="bg-bland flex flex-row items-center justify-center">
                        <img src="/projects/webapps/makemeshort.png" alt="makeme.short" class="w-64 h-48 object-top object-cover">
                        <div class="text-light-gray h-full w-full px-6">
                            <a href="#" class="text-2xl font-black tracking-wide">makeme.short</a>
                            <p class="text-lg font-light px-4 my-2">A Simple URL Shortener built with Flask.</p>
                            <a href="#" type="button" class="py-1 px-6 uppercase text-sm tracking-wide bg-dark-gray hover:bg-black">Source Code</a>
                        </div>
                    </div>
                    <div class="bg-bland flex flex-row items-center justify-center">
                        <img src="/projects/webapps/covid19ph.png" alt="makeme.short" class="w-64 h-48 object-top object-cover">
                        <div class="text-light-gray h-full w-full px-6">
                            <a href="#" class="text-2xl font-black tracking-wide">Covid19-PH Data API</a>
                            <p class="text-lg font-light px-4 my-2">A simple API for the covid-19 cases summary in the PH.</p>
                            <a href="#" type="button" class="py-1 px-6 uppercase text-sm tracking-wide bg-dark-gray hover:bg-black">Source Code</a>
                        </div>
                    </div>
                    <div class="bg-bland flex flex-row items-center justify-center">
                        <img src="/projects/webapps/mymood.png" alt="makeme.short" class="w-64 h-48 object-top object-cover">
                        <div class="text-light-gray h-full w-full px-6">
                            <a href="#" class="text-2xl font-black tracking-wide">my.Mood <small class="text-red-800">(buggy)</small></a>
                            <p class="text-lg font-light px-4 my-2">A simple social networking app built with Flask.</p>
                            <a href="#" type="button" class="py-1 px-6 uppercase text-sm tracking-wide bg-dark-gray hover:bg-black">Source Code</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr class="border-mid-gray">
        </div>
    </div>
{% endblock %}
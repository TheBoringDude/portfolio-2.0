{% extends "_includes/default.njk" %}

{% block title %}{{title}} - Blog{% endblock %}

{% block content %}
    <div class="py-6 w-11/12 sm:w-5/6 md:w-4/5 lg:w-2/3 mx-auto">
        <a href="" type="button" class="py-1 text-sm underline text-greener">Return to Blogs</a>
        <article class="my-4">
            <h1 class="text-2xl md:text-3xl font-black">{{title}}</h1>
            <div>
                {% for label in labels %}
                    <small class="bg-middle p-1 text-white tracking-wide">{{label}}</small>
                {% endfor %}
            </div>
            <hr class="my-4">

            {{ content | safe }}
        </article>
        <small class="tracking-wide"><time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time> | {{author}} </small>
    </div>
{% endblock %}
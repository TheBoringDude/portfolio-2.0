---
pagination:
    data: collections.blog
    size: 10
    reverse: true
    alias: posts
---

{% extends "_includes/default.njk" %}

{% block title %}My Blogs{% endblock %}

{% block content %}
    <!-- blog contents -->
    <div class="w-11/12 md:w-5/6 lg:w-2/3 xl:w-3/5 py-6 mx-auto">
        <h3 class="text-2xl font-bold underline">Blogs</h3>
        <p class="text-lg font-light">Just some content I wrote...</p>
        <div class="">
            {% for post in posts %}
                <div class="shadow-lg my-3 flex flex-col">
                    <div class="bg-dark text-white p-4 flex justify-between items-center">
                        <h2 class="text-xl font-semibold truncate">{{post.data.title}}</h2>
                        <a href="{{ post.url | url }}" type="button" class="bg-middle p-2 text-sm rounded-full hover:bg-greener">Read More</a>
                    </div>
                    <p class="py-3 px-5 truncate">{{ post.data.summary }}</p>
                    <small class="font-semibold px-4 pb-4 text-gray-800">Posted on: <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time></small>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
{% extends "_includes/default.njk" %}

{% block title %}Welcome to My Personal Website{% endblock %}

{% block content %}
    <!-- showcase -->
    <div class="showcase-header px-4 py-8 md:py-16 lg:py-20">
        <div class="md:w-5/6 mx-auto">
            <div class="w-11/12 mx-auto text-white">
                <h1 class="text-4xl text-center font-light">Hello, I am <br><strong class="font-black md:text-5xl">Lorem Ipsum</strong>.<br>Just a <span class="underline">simple</span>, <span class="underline">introverted</span> and <span class="underline">boring</span> person.</h1>
            </div>
            <div class="text-center pt-2">
                <a href="#about" type="button" class="py-3 px-6 bg-dark text-white opacity-75 hover:opacity-100 transition-opacity duration-500">Get to Know Me</a>
                <a href="/portfolio" type="button" class="py-3 px-6 bg-darker text-white opacity-75 hover:opacity-100 transition-opacity duration-500">My Works</a>
            </div>
            <!-- social media -->
            <div class="w-5/6 md:w-3/5 lg:w-1/3 mx-auto py-2 bg-white flex justify-center flex-col items-center mt-4">
                <h3 class="mb-2 font-light">my <strong>social media</strong></h3>
                <ul class="flex items-center">
                    <li class="mx-1">
                        <a href="https://www.facebook.com/joshue1337" type="button" class="transform hover:scale-125 transition-transform duration-500"><img src="/static/social/github.svg" alt="" class="h-6 w-6"></a>
                    </li>
                    <li class="mx-1">
                        <a href="https://twitter.com/joshabance" type="button" class="transform hover:scale-125 transition-transform duration-500"><img src="/static/social/twitter.svg" alt="" class="h-6 w-6"></a>
                    </li>
                    <li class="mx-1">
                        <a href="https://www.instagram.com/_3uhsoj/" type="button" class="transform hover:scale-125 transition-transform duration-500"><img src="/static/social/facebook.svg" alt="" class="h-6 w-6"></a>
                    </li>
                    <li class="mx-1">
                        <a href="https://github.com/TheBoringDude" type="button" class="transform hover:scale-125 transition-transform duration-500"><img src="/static/social/instagram.svg" alt="" class="h-6 w-6"></a>
                    </li>
                </ul>
            </div>
        </div>
            
    </div>

    <div class="flex items-center flex-col lg:flex-row" id="about">
        <!-- about me -->
        <div class="w-full lg:w-1/2 mx-auto py-4">
            <div class="w-11/12 sm:w-5/6 xl:w-2/3 md:w-4/5 mx-auto">
                <h2 class="text-2xl">About Me</h2>
                <div class="py-2">
                    <p class="text-lg">I am just a simple introverted person and a nerd who wants to explore and experience new things. I specialize with computer softwares, programming and other tech-stuff.</p>
                    <p class="mt-1">I don't have such sayings for inspiration, its just that I'm all about simplicity.</p>

                    <!-- hobbies -->
                    <div class="p-2">
                        <h3 class="text-xl text-center font-bold underline">My Hobbies</h3>
                        <ul class="grid grid-cols-3 gap-4">
                            <li class="flex flex-col-reverse items-center justify-center">
                                <h4 class="text-lg">Watching</h4>
                                <img src="https://img.icons8.com/cotton/64/000000/tv-show.png"/>
                            </li>
                            <li class="flex flex-col-reverse items-center justify-center">
                                <h4 class="text-lg">Playing</h4>
                                <img src="https://img.icons8.com/cotton/64/000000/controller.png"/>
                            </li>
                            <li class="flex flex-col-reverse items-center justify-center">
                                <h4 class="text-lg">Coding</h4>
                                <img src="https://img.icons8.com/cotton/64/000000/laptop-coding.png"/>
                            </li>
                            <li class="flex flex-col-reverse items-center justify-center">
                                <h4 class="text-lg">Browsing</h4>
                                <img src="https://img.icons8.com/cotton/64/000000/wired-network-connection--v1.png"/>
                            </li>
                            <li class="flex flex-col-reverse items-center justify-center">
                                <h4 class="text-lg">Music</h4>
                                <img src="https://img.icons8.com/cotton/64/000000/earbud-headphones.png"/>
                            </li>
                            <li class="flex flex-col-reverse items-center justify-center">
                                <h4 class="text-lg">Home</h4>
                                <img src="https://img.icons8.com/cotton/64/000000/home--v3.png"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- send me a message -->
        <div class="w-full lg:w-1/2 mx-auto bg-darker py-6">
            <div class="w-11/12 sm:w-5/6 xl:w-2/3 md:w-4/5 mx-auto text-white">
                <h2 class="text-2xl font-semibold">Send Me a Message</h2>
                <p>Want to send me a message?</p>
                <form action="#">
                    <div class="flex flex-col my-1">
                        <label class="text-lg font-light tracking-wide" for="fullname">Full Name</label>
                        <input type="text" placeholder="Your full name" class="p-2 bg-middle focus:outline-none border-2 rounded-md border-dark focus:border-lightgreen">
                    </div>
                    <div class="flex flex-col my-1">
                        <label class="text-lg font-light tracking-wide" for="email">Email</label>
                        <input type="email" placeholder="Your email address" class="p-2 bg-middle focus:outline-none border-2 rounded-md border-dark focus:border-lightgreen">
                    </div>
                    <div class="flex flex-col my-1">
                        <label class="text-lg font-light tracking-wide" for="message">Message</label>
                        <textarea name="" placeholder="Your message" class="p-2 bg-middle focus:outline-none border-2 rounded-md border-dark focus:border-lightgreen h-48"></textarea>
                    </div>
                    <div class="text-center my-1">
                        <input type="submit" value="Send" class="px-10 py-2 bg-gray-100 text-black opacity-75 hover:opacity-100 cursor-pointer rounded-full">
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div>
        {# {% for post in posts %}
        <article>
            <h1>
                <a href="{{ post.url | url }}">{{post.data.title}}</a>
            </h1>
            <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>

            {% excerpt post %}

            <a href="{{ post.url | url }}">Read more</a>
        </article>
        {% endfor %} #}
    </div>
{% endblock %}